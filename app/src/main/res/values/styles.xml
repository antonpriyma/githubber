<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeLogin" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppMaterialDialog" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="fontFamily">@font/roboto_regular</item>
        <item name="material_dialog_background">#FFFFFF</item>
        <item name="material_dialog_title_text_color">@color/grey_900</item>
        <item name="material_dialog_message_text_color">@color/black_90</item>
        <item name="material_dialog_positive_button_color">@color/green_400</item>
        <item name="material_dialog_positive_button_text_color">@color/white</item>
        <item name="material_dialog_negative_button_text_color">@color/red_600</item>

    </style>

    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_login</item>
    </style>

    <style name="DividerLine">
        <item name="android:background">@color/grey_700</item>
    </style>

    <style name="DividerLine.Horizontal" parent="DividerLine">
        <item name="android:layout_height">@dimen/divider_width</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="DividerLine.Vertical" parent="DividerLine">
        <item name="android:layout_width">@dimen/divider_width</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
        <item name="android:windowBackground">@drawable/github_logo</item>
        <!--<item name="icon_color">@color/white</item> &lt;!&ndash; to display the icons properly since this theme is the default &ndash;&gt;-->
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">?titleTextColor</item>
    </style>

    <style name="Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/text_mini</item>
        <item name="android:textColor">?subtitleTextColor</item>
    </style>

    <style name="Toolbar.Expand.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="text_link">
        <item name="android:textColor">?android:colorAccent</item>
    </style>

    <style name="label_color">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?titleTextColor</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.profile">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


</resources>
